page{
    height: 100%;
}
.app{
    background-color: #eee;
}
.signin-hd{
    width: 750rpx;
    height: 500rpx;
    background: url("http://static.memorecool.cn/wx/pet/qiandao_banner.png") no-repeat;
    background-size: 100% 100%;
    padding-top: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.signin-wrapimg{
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    border-radius: 50%;
}
.signin-wrapimg image{
    width: 200rpx;
    height: 200rpx;
}
.signin-name{
    font-size: 32rpx;
    color: #fff;
    margin-top: 30rpx;
}
.signin-btn{
    width: 200rpx;
    height: 70rpx;
    border-radius: 10rpx;
    border: 2rpx solid #000;
    color: #000;
    background-color: #c8fff3;
    text-align: center;
    line-height: 70rpx;
    margin-top: 30rpx;
    font-size: 30rpx;
}
.signin-t1{
    font-size: 28rpx;
    color: #fff;
    margin-top: 8rpx;
}
.signin-t2{
    font-size: 28rpx;
    color: #000;
}
.signin-cells{
    display: flex;
    background-color: #fff;
    padding: 20rpx 30rpx;
    justify-content: space-between;
}
.signin-cell{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.signin-cell text{
    font-size: 26rpx;
}
.signin-mid-t{
    width: 750rpx;
    height: 60rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 60rpx;
}
.signin-share{
    width: 750rpx;
    background-color: #fff;
}
.signin-share-line{
    display: flex;
    padding: 20rpx 16rpx;
    font-size: 28rpx;
    justify-content: space-between;
}
.share-line-left{
    display: flex;
    flex-direction: column;
}
.share-line-left .line-l2{
    font-size: 24rpx;
    color: #adadad;
    margin-top: 8rpx;
}
.signin-share-btn{
    width: 160rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    background: #ffb040;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}